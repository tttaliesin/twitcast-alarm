<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 인터넷 권한: 스트림 상태 확인용 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Wake Lock: 백그라운드에서 앱 실행 유지 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Foreground Service 권한 (Android 9 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Foreground Service 데이터 동기화 권한 (Android 14 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- 오디오 재생 권한 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- 알림 권한 (Android 13 이상) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 정확한 알람 스케줄링 권한 (Android 12 이상) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- 부팅 완료 수신: 재부팅 후 모니터링 재시작 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:label="스드트캐안놓앱"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true">

            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 아래 meta-data를 삭제하지 마세요.
             Flutter 도구가 GeneratedPluginRegistrant.java를 생성하는 데 사용됩니다 -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- 백그라운드 모니터링 서비스 -->
        <service
            android:name=".StreamMonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>
